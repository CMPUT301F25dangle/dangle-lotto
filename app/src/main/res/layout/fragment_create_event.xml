<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ui.create_event.CreateEventFragment">

    <LinearLayout
        android:id="@+id/create_event_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/create_event_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/create_event_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

    <TextView
        android:id="@+id/create_event_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/event_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/create_event_status_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/create_event_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/enter_event_name"
        android:autofillHints="name"
        android:padding="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/create_event_name_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/create_event_banner"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:scaleType="centerCrop"
        android:background="@color/light_blue"
        android:src="@drawable/event_card_test_image"
        app:layout_constraintTop_toBottomOf="@id/create_event_name_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/create_event_banner_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/dark_blue"
        android:text="@string/upload_poster"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/create_event_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/create_event_enter_maxentrants_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/create_event_banner_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cb_max_entrants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maximum_entrants"
            android:checked="false"/>

        <EditText
            android:id="@+id/create_event_input_maxEntrants"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/create_event_deadline_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/deadline"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/create_event_enter_maxentrants_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/create_event_date_picker_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/create_event_deadline_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/create_event_input_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Apr 1, 2025"
            android:inputType="text"
            android:padding="8dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/create_event_input_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="9:41 AM"
            android:inputType="text"
            android:padding="8dp"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/create_event_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Event Description"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/create_event_date_picker_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/create_event_input_description"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:gravity="top|start"
        android:hint="Describe your event..."
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/create_event_description_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cb_enable_geolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Require Geolocation"
        app:layout_constraintTop_toBottomOf="@id/create_event_input_description"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
