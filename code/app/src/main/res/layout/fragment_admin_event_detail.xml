<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminEventDetailFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/admin_btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:padding="8dp"
        android:src="@drawable/outline_arrow_back_24"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnBackground" />

    <!-- Info Button -->
    <ImageButton
        android:id="@+id/admin_event_detail_information_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/info_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnBackground" />

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/admin_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/admin_delete_event_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/admin_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black" />

            <!-- Poster -->
            <ImageView
                android:id="@+id/admin_img_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/event_poster"
                android:contentDescription="@null" />

            <!-- Spots -->
            <TextView
                android:id="@+id/admin_event_spots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrants: 10 / 20"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"
                android:textColor="@color/black" />

            <!-- Start Date -->
            <TextView
                android:id="@+id/admin_event_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opens: Nov 24, 11:00 PM"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- End Date -->
            <TextView
                android:id="@+id/admin_event_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closes: Nov 24, 11:00 PM"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/admin_event_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Date: Nov 24, 11:00 PM"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Organizer Row -->
            <LinearLayout
                android:id="@+id/admin_organizer_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/admin_img_organizer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile_picture"
                    android:contentDescription="@null"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Corner.Right" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/admin_organizer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organizer: Alice Johnson"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- Categories Title -->
            <TextView
                android:id="@+id/admin_event_details_categories_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Categories"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <!-- Categories Input -->
            <TextView
                android:id="@+id/admin_event_details_categories_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example categories"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <!-- Description -->
            <TextView
                android:id="@+id/admin_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Event Description:\nEvent description goes here..."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- Geolocation -->
            <TextView
                android:id="@+id/admin_event_detail_geolocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Geolocation Is Not Required For This Event"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Admin Delete Button -->
    <Button
        android:id="@+id/admin_delete_event_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="Delete"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible" />

    <!-- Bottom Message -->
    <TextView
        android:id="@+id/admin_bottom_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
