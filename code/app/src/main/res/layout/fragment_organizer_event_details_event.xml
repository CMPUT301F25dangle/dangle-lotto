<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/organizer_event_details_event_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/organizer_event_details_event_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                android:src="@drawable/event_poster" />

            <Button
                android:id="@+id/organizer_event_details_event_poster_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Update Poster"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/organizer_event_details_event_spots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrants: 10 / 20"
                android:textSize="18sp"
                android:layout_marginVertical="12dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/organizer_event_details_event_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opens:"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/organizer_event_details_event_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closes:"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/organizer_event_details_event_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Date:"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/organizer_event_details_event_categories_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Categories"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/organizer_event_details_event_categories_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example categories"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/organizer_event_details_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Event Description:\nEvent description goes here..."
                android:textSize="18sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/organizer_event_details_event_geolocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Geolocation Is Not Required For This Event"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

