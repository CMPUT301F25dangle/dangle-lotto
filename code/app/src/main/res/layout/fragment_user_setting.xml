<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/settings_fragment_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/outline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Settings"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/settings_fragment_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_title" />

    <EditText
        android:id="@+id/settings_fragment_name_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:hint="Mahd Afzal"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/settings_fragment_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_name_input" />

    <EditText
        android:id="@+id/settings_fragment_username_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:hint="Afzal1"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_username_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/settings_fragment_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_username_input" />

    <EditText
        android:id="@+id/settings_fragment_email_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:hint="mahd@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_email_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/settings_fragment_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_email_input" />

    <EditText
        android:id="@+id/settings_fragment_phone_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:hint="1234567890"
        android:inputType="phone"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_phone_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/user_settings_update_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Update Profile"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_phone_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/user_settings_update_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/user_settings_delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete Profile"
        android:backgroundTint="@color/red"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/logoutBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
